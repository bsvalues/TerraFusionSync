# TerraFusion Platform Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/terrafusion_db

# Security Configuration
SESSION_SECRET=your-cryptographically-secure-session-key-minimum-32-characters

# AI Services (Optional)
OLLAMA_BASE_URL=http://localhost:11434

# Cache and Queue (Optional)
REDIS_URL=redis://localhost:6379

# Application Settings
DEBUG=False
LOG_LEVEL=INFO
EXPORT_RETENTION_DAYS=7

# External Services (If Required)
# GEOCODING_API_KEY=your-geocoding-service-key
# MAPPING_API_KEY=your-mapping-service-key
# SMTP_SERVER=your-email-server
# SMTP_USERNAME=your-email-username
# SMTP_PASSWORD=your-email-password

# Cloud Storage (If Using Cloud Backends)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_S3_BUCKET=your-export-bucket
# AZURE_STORAGE_CONNECTION_STRING=your-azure-storage-connection